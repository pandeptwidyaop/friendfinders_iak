<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto">
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/ivUserCircle"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:src="@drawable/ic_launcher_background"
        card_view:civ_border_color="#ff0000"
        card_view:civ_border_width="2dp"/>

    <TextView
        android:id="@+id/tvUserUsername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ivUserCircle"
        android:layout_marginTop="30dp"
        android:textSize="30sp"
        android:text="Username"
        android:layout_centerHorizontal="true"
        />

    <TextView
        android:id="@+id/tvUserFullName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvUserUsername"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="27dp"
        android:text="Full Name"/>

    <TextView
        android:id="@+id/tvUserEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvUserFullName"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="27dp"
        android:text="Email"/>

    <TextView
        android:id="@+id/tvUserDateBirth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvUserEmail"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="27dp"
        android:text="Date of Birth"/>

    <TextView
        android:id="@+id/tvUserPhone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvUserDateBirth"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="27dp"
        android:text="Phone"/>
</RelativeLayout>